<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="#A9F3E6E6"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textNomeEntregador"
        android:layout_width="213dp"
        android:layout_height="33dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-medium"
        android:text="Sushi de salmão"

        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textEmailEntregador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/advent_pro_medium"
        android:text="Salmão com nosso delicioso arroz temperado"
        android:textColor="#494747"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textSenhaEntregador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="R$ 19.90"
        android:textColor="#0DAA13"
        android:textSize="18sp"
        android:textStyle="bold" />

    <include
        layout="@layout/divisor"
        android:layout_width="match_parent"
        android:layout_height="5dp" />



</LinearLayout>